<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="study" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/study</jta-data-source>
    <class>kz.study.entity.Games</class>
      <class>kz.study.entity.Slide</class>
      <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/study?characterEncoding=utf8"/>
      <property name="eclipselink.query-results-cache" value="false"/>
      <property name="eclipselink.cache.shared.default" value="false"/>
      <property name="eclipselink.jpa.uppercase-column-names" value="true"/>
      <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/study"/>
      <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
